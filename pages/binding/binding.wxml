<view class="binding">
  <view class="title">绑定PC账号</view>
  <view class="input-wrapper">
    <input bindinput="watchAccount" placeholder="账号" placeholder-style="color:#F6705A" value="{{account}}"></input>
    <input bindinput="watchPassword" password='true' placeholder="密码" placeholder-style="color:#F6705A" value="{{passowrd}}"></input>
  </view>
  <view><t-button text="绑定" type="change" size="mini" bindtap='submit'></t-button></view>
  <view class="tips">绑定PC账号，立即同步数据</view>
  <image src="../../images/tomato-bg.png" class="bg"></image>
</view>
