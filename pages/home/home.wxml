<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item">
      <view class="select {{item.completed && 'active'}}"></view>
      <text>所以，我们提出了将关注生活</text>
    </view>
  </scroll-view>
  
  <m-button text="创建一个任务" size="mini" type="default"></m-button>
  
  <view class="tomato-wrapper">
    <navigator class="tomato" url="/pages/tomato/tomato">
      <m-clock text="点击计时"></m-clock>
    </navigator>
  </view>
  <m-confirm visible="{{visible}}" placeholder="我已经完成了" bindconfirm="confirm" bindcancel="cancel"></m-confirm>
  <!-- 调用的组件内部函数的时候使用的是bind+函数名的方式，然后再js中进行自定义 -->
</view>