.cantainer { 
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
 }
 .confirm { 
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  padding: 26rpx 20rpx 0 20rpx;
  background: #fff;
  border-radius: 16rpx;
  width: 440rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
 }
 .tip { 
  background: #f2f2f2;
  border-radius: 8rpx;
  width: 100%;
  height: 120rpx;
  margin-bottom: 22rpx;
  color: #F6705A;
  padding: 10rpx 10rpx;
  font-size: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.actions {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  position: relative;
}
.actions > view {
  width: 50%;
  height: 66rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 22rpx;
  background: linear-gradient(to right,#EF9B75, #F6705A);
}
.actions > view.active { 
  opacity: 0.5;
}